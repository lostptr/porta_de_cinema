<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/padding_medium"
    android:layout_marginVertical="4dp">

    <View
        android:id="@+id/movie_card_title_placeholder"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="90dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/movie_card_poster_placeholder"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/movie_card_overview_placeholder"
        android:layout_width="0dp"
        android:layout_marginEnd="8dp"
        android:layout_height="80dp"
        android:layout_marginTop="4dp"
        android:background="@color/shimmer_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/movie_card_title_placeholder"
        app:layout_constraintTop_toBottomOf="@id/movie_card_title_placeholder" />

    <View
        android:id="@+id/movie_card_poster_placeholder"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="12dp"
        android:background="@color/shimmer_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/movie_card_title_placeholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
